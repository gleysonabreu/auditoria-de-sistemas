{
  "compilerOptions": {
    "target": "es5",                        
    "module": "commonjs",                   
    "allowJs": true,                     
    "sourceMap": true,                   
    "strict": true,                           
    "types": [
      "node"
    ],                         
    "esModuleInterop": true,                
    "skipLibCheck": true,                   
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@classes/*": ["./src/classes/*"],
    }
  }
}
